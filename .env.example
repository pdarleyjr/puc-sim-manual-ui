# Mobile App UI Feature Flag
# Set to 'true' to enable mobile-only app shell (or use ?m=1 query parameter)
VITE_MOBILE_APP_UI=false

# Feature Flags (default: false for backward compatibility)
VITE_HYDRANT_LAB_V2=false
VITE_CALC_ENGINE_V2=false

# Scenarios (unified)
# Enables unified scenarios feature (defaults to true if SCENARIO_ADMIN is enabled)
VITE_SCENARIOS_UNIFIED=false

# Query Parameter Overrides:
# ?flag:mobile_app_ui=1 - Force mobile UI
# ?flag:hydrant_lab_v2=1 - Force Hydrant Lab V2
# ?flag:calc_engine_v2=1 - Force Calc Engine V2
# ?flag:scenarios_unified=1 - Force unified scenarios